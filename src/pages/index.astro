---
// Importujemy Layout i wszystkie potrzebne komponenty
import Layout from '../layouts/Layout.astro';
import Naglowek from '../components/Naglowek.astro';
import Hero from '../components/Hero.astro';
import ProblemRozwiazanie from '../components/ProblemRozwiazanie.astro';
import KluczoweProdukty from '../components/KluczoweProdukty.astro';
import Opinie from '../components/Opinie.astro';
import CTA from '../components/CTA.astro';
import Stopka from '../components/Stopka.astro';
import FAQSection from '../components/FAQSection.astro'; 
// POPRAWKA: Przywracamy CzatbotPlaceholder i dodajemy ChatWidget
import CzatbotPlaceholder from '../components/CzatbotPlaceholder.astro';
import ChatWidget from '../components/ChatWidget.astro';

// Importujemy logikę Gemini
import generateFAQContent from '../ai/gemini-logic.js';
// === LOGIKA GENERACJI STRONY ===
const topic = "Ogólne ubezpieczenia dla firm i osób prywatnych - WZORZEC AKTYWNY";
const faqResult = await generateFAQContent(topic);
const faqData = faqResult?.faqData || []; 
const schemaJSON = faqResult?.schemaJSON || '';
// ===============================
---

<Layout 
    title="Galeria Ubezpieczeniowa - WZORZEC AKTYWNY" 
    description="[TUTAJ WPISZ UNIKALNY OPIS DLA SEO]">

    {schemaJSON && (
        <script type="application/ld+json" slot="head" is:inline set:html={schemaJSON} />
    )}

    <Naglowek />
    
    <main>
      <Hero />
      <ProblemRozwiazanie />
      <KluczoweProdukty />
      <Opinie />
      <FAQSection data={faqData} />
     <CTA />
    </main>
    
    <Stopka />

    <CzatbotPlaceholder />
    <ChatWidget />

</Layout>