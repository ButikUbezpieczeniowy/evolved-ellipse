---
export interface Props {
    headline: string;
    subHeadline: string;
    imagePath: string; // Użyj ścieżki do obrazka WebP!
}
const { headline, subHeadline, imagePath } = Astro.props;
---
<section class="relative bg-gray-100 py-16 md:py-24 overflow-hidden">
    <div class="absolute inset-0">
        <img
            src={imagePath}
            alt="Rodzina na wakacjach w górach, symbolizująca ubezpieczenie turystyczne w Polsce"
            class="w-full h-full object-cover opacity-20"
            loading="eager"
            width="1920"
            height="1080"
        />
    </div>

    <div class="max-w-6xl mx-auto px-4 relative z-10 grid md:grid-cols-2 gap-12 items-center">
        
        <div>
            <h1 class="text-5xl md:text-6xl font-extrabold text-gray-900 leading-tight mb-4">
                {headline}
            </h1>
            <p class="text-xl text-gray-700 mb-8">
                {subHeadline}
            </p>
            <div class="flex flex-wrap gap-4 text-green-600 font-semibold">
                <span>✅ 24/7 Assistance</span>
                <span>✅ Koszty Ratownictwa</span>
                <span>✅ Zwrot za Rezygnację</span>
            </div>
        </div>

        <div class="bg-white p-6 md:p-8 rounded-xl shadow-2xl border-t-4 border-blue-600">
            <h2 class="text-2xl font-bold text-center text-blue-700 mb-6">
                Szybka Wycena Polisy w 90 Sekund!
            </h2>
            <form class="space-y-4">
                <input type="text" placeholder="Twój Numer Telefonu*" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                <input type="email" placeholder="Adres E-mail*" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                <select class="w-full p-3 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                    <option>Wybierz cel podróży...</option>
                    <option>Polska (Turystyka)</option>
                    <option>Polska (Praca)</option>
                </select>
                <div class="flex items-start">
                    <input id="zgoda" type="checkbox" required class="mt-1 mr-2 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                    <label for="zgoda" class="text-sm text-gray-600">
                        Wyrażam zgodę na kontakt w celu przedstawienia oferty.
                    </label>
                </div>
                <button type="submit" class="w-full bg-yellow-500 text-gray-900 font-bold py-3 rounded-lg text-lg hover:bg-yellow-600 transition duration-300 shadow-lg">
                    Poproś o Najlepszą Ofertę
                </button>
            </form>
            <p class="text-xs text-center text-gray-500 mt-4">
                Twoje dane są bezpieczne. Gwarantujemy poufność.
            </p>
        </div>
    </div>
</section>