---
// Ten komponent powinien przyjmować tylko dane z propa.
const { data } = Astro.props; 
// data = [{ pytanie: "...", odpowiedz: "..." }, {...}]
---

<section class="faq-section">
    <h2>Najczęściej Zadawane Pytania (FAQ)</h2>
    
   <div class="faq-container">
        {data && data.length > 0 ? ( // SPRAWDZAMY CZY DANE ISTNIEJĄ
            data.map((item, index) => (
                <details class="faq-item">
                    <summary class="faq-question">
                        {item.pytanie}
                    </summary>
                    <p class="faq-answer">
                         {/* Zabezpieczenie przed literówkami w polach 'odpowiedz'/'odpowiedź' */}
                         {item.odpowiedz || item.odpowiedź || 'Treść odpowiedzi jest obecnie niedostępna.'}
                    </p>
                </details>
            ))
        ) : (
            <p class="error-message">
                 Sekcja FAQ jest chwilowo niedostępna. Prosimy spróbować później.
            </p>
        )}
    </div>
</section>

<style>
/* PODSTAWOWA STYLIZACJA CSS DLA FAQ */
.faq-section {
    padding: 3rem 1rem;
    background-color: #ffffff; /* Białe tło dla kontrastu */
    text-align: center;
    max-width: 1000px;
    margin: 0 auto;
}

.faq-section h2 {
    font-size: 2rem;
    color: #333;
    margin-bottom: 2rem;
}

.faq-container {
    text-align: left;
    margin-top: 1.5rem;
    border-top: 1px solid #ddd;
}

.faq-item {
    border-bottom: 1px solid #ddd;
    margin-bottom: 0;
    transition: background-color 0.3s;
}

.faq-item[open] {
    background-color: #f8f8f8;
}

.faq-question {
    font-weight: bold;
    padding: 1rem 1.5rem;
    cursor: pointer;
    list-style: none; /* Ukrywa domyślny trójkąt */
    font-size: 1.1rem;
    color: #0056b3; /* Kolor pytania */
}

/* Wymuszenie trójkąta dla otwartych detali */
.faq-question::-webkit-details-marker,
.faq-question::marker {
    display: none;
}

.faq-question::before {
    content: '+';
    font-size: 1.2rem;
    margin-right: 10px;
    color: #0056b3;
}

.faq-item[open] .faq-question::before {
    content: '-';
    color: #d9534f;
}

.faq-answer {
    padding: 0 1.5rem 1rem 1.5rem;
    line-height: 1.6;
    color: #555;
    margin-top: 0.5rem;
}
</style>