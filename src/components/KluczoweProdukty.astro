  }
  /* Style dla zakładek */
  .tabs {
    display: flex;
    justify-content: center;
    margin-bottom: 3rem;
    border-bottom: 1px solid #ddd;
  }
  .tab-button {
    padding: 1rem 2rem;
    border: none;
    background-color: transparent;
    cursor: pointer;
    font-size: 1.1rem;
    font-family: 'Montserrat', sans-serif;
    color: #888;
    position: relative;
    transition: color 0.3s ease;
  }
  .tab-button:hover {
    color: var(--kolor-glowny-ciemny);
  }
  .tab-button.active {
    color: var(--kolor-glowny-ciemny);
    font-weight: bold;
  }
  .tab-button.active::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    right: 0;
    height: 3px;
    background-color: var(--kolor-akcentu);
  }
  /* Style dla treści zakładek */
  .tab-content {
    display: none;
  }
  .tab-content.active {
    display: block;
  }
  /* Siatka kart produktowych */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    text-align: left;
  }
  .product-card {
    background: var(--kolor-bialy);
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    padding: 2rem;
  }
  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
  }
  .card-icon {
    width: 50px;
    height: 50px;
    color: var(--kolor-akcentu);
    background-color: var(--kolor-glowny-ciemny);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
  }
  .card-icon svg {
    width: 28px;
    height: 28px;
  }
  .card-content {
    flex-grow: 1;
  }
  .card-content h3 {
    margin-top: 0;
    font-size: 1.3rem;
  }
  .insurer {
    font-weight: normal;
    font-size: 1.1rem;
    color: #6c757d;
  }
  .card-content p {
    color: #6c757d;
    font-size: 0.95rem;
  }
  .card-action {
    margin-top: 1.5rem;
  }
  .cta-button {
    display: inline-block;
    background-color: var(--kolor-glowny-ciemny);
    color: var(--kolor-bialy);
    padding: 12px 25px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s ease;
    width: 100%;
    text-align: center;
  }
  .cta-button:hover {
    background-color: #000;
  }
  .promo-code {
    text-align: center;
    margin-top: 0.75rem;
    font-size: 0.85rem;
    color: var(--kolor-tekstu-ciemny);
    background-color: #e9ecef;
    padding: 5px;
    border-radius: 3px;
  }
</style>