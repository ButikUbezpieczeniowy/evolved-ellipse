<section class="products">
  <div class="container">
    <h2>Ubezpieczenia na każdą potrzebę</h2>
    
    <div class="tabs">
      <button class="tab-button active" data-tab="dla-ciebie">Dla Ciebie i Rodziny</button>
      <button class="tab-button" data-tab="dla-firmy">Dla Twojej Firmy</button>
    </div>

    <div class="tab-content active" id="dla-ciebie">
      <div class="products-grid">
        {produktyDlaCiebie.map(produkt => (
          <div class="product-card">
            <div class="card-icon" set:html={ikony[produkt.ikona]} />
            <div class="card-content">
              <h3>{produkt.nazwa} <span class="insurer">({produkt.ubezpieczyciel})</span></h3>
              <p>{produkt.opis}</p>
            </div>
            <div class="card-action">
              <a href={produkt.link} target="_blank" rel="noopener noreferrer" class="cta-button">{produkt.tekstPrzycisku}</a>
              {produkt.kod && <p class="promo-code">{produkt.kod}</p>}
            </div>
          </div>
        ))}
      </div>
    </div>

    <div class="tab-content" id="dla-firmy">
      <div class="products-grid">
        {produktyDlaFirmy.map(produkt => (
          <div class="product-card">
            <div class="card-icon" set:html={ikony[produkt.ikona]} />
            <div class="card-content">
              <h3>{produkt.nazwa} <span class="insurer">({produkt.ubezpieczyciel})</span></h3>
              <p>{produkt.opis}</p>
            </div>
            <div class="card-action">
              <a href={produkt.link} target="_blank" rel="noopener noreferrer" class="cta-button">{produkt.tekstPrzycisku}</a>
              {produkt.kod && <p class="promo-code">{produkt.kod}</p>}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<script>
  // Prosta logika do przełączania zakładek
  const tabButtons = document.querySelectorAll('.tab-button');
  const tabContents = document.querySelectorAll('.tab-content');

  tabButtons.forEach(button => {
    button.addEventListener('click', () => {
      // Usunięcie klasy 'active' ze wszystkich przycisków i treści
      tabButtons.forEach(btn => btn.classList.remove('active'));
      tabContents.forEach(content => content.classList.remove('active'));

      // Dodanie klasy 'active' do klikniętego przycisku i odpowiedniej treści
      const tabId = button.dataset.tab;
      const activeContent = document.getElementById(tabId);
      
      button.classList.add('active');
      if (activeContent) {
        activeContent.classList.add('active');
      }
    });
  });
</script>

<style>
  .products {
