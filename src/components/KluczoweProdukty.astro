<section class="products">
  <div class="container">
    <h2>Wybierz ubezpieczenie, którego potrzebujesz</h2>
    <div class="tabs">
      <button class="tab-button active" data-tab="dlaCiebie">Dla Ciebie</button>
      <button class="tab-button" data-tab="dlaFirmy">Dla Firmy</button>
      <button class="tab-button" data-tab="dlaCiebieNaZycie">dla Ciebie na życie</button>
    </div>
    <div id="dlaCiebie" class="tab-content active">
      <div class="category-grid">
        {daneProduktow.dlaCiebie.map((kategoria, index) => (
          <div class="category-card" data-tab="dlaCiebie" data-index={index}>
            <div class="card-icon" set:html={ikony[kategoria.ikona]} />
            <h3>{kategoria.kategoria}</h3>
          </div>
        ))}
      </div>
    </div>
    <div id="dlaFirmy" class="tab-content">
       <div class="category-grid">
        {daneProduktow.dlaFirmy.map((kategoria, index) => (
          <div class="category-card" data-tab="dlaFirmy" data-index={index}>
            <div class="card-icon" set:html={ikony[kategoria.ikona]} />
            <h3>{kategoria.kategoria}</h3>
          </div>
        ))}
      </div>
    </div>
    <div id="dlaCiebieNaZycie" class="tab-content">
       <div class="category-grid">
        {daneProduktow.dlaCiebieNaZycie.map((kategoria, index) => (
          <div class="category-card" data-tab="dlaCiebieNaZycie" data-index={index}>
            <div class="card-icon" set:html={ikony[kategoria.ikona]} />
            <h3>{kategoria.kategoria}</h3>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
<div id="product-modal" class="modal-overlay">
  <div class="modal-content">
    <button id="modal-close" class="modal-close-button">&times;</button>
    <h2 id="modal-title">Wybierz ofertę</h2>
    <div id="modal-offers" class="offers-container">
    </div>
  </div>
</div>
<script define:vars={{ daneProduktow, ikony }}>
  document.addEventListener('DOMContentLoaded', () => {
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabContents = document.querySelectorAll('.tab-content');
    const categoryCards = document.querySelectorAll('.category-card');
    const modal = document.getElementById('product-modal');
    const modalTitle = document.getElementById('modal-title');
    const modalOffers = document.getElementById('modal-offers');
    const modalClose = document.getElementById('modal-close');
    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        tabButtons.forEach(btn => btn.classList.remove('active'));
        tabContents.forEach(content => content.classList.remove('active'));
        button.classList.add('active');
        document.getElementById(button.dataset.tab).classList.add('active');
      });
    });
    categoryCards.forEach(card => {
      card.addEventListener('click', () => {
        const tab = card.dataset.tab;
        const index = parseInt(card.dataset.index, 10);
        const kategoria = daneProduktow[tab][index];
        
        modalTitle.textContent = kategoria.kategoria;
        modalOffers.innerHTML = ''; 
        kategoria.oferty.forEach(oferta => {
          const offerTile = document.createElement('a');
          offerTile.href = oferta.link;
          offerTile.className = 'offer-tile';
          
          let iconHTML = ikony['formularz']; // Domyślna ikona

          if (oferta.typ !== 'formularz') {
            offerTile.target = '_blank';
            offerTile.rel = 'noopener noreferrer';
          } else {
            offerTile.classList.add('is-contact');
            iconHTML = ikony['telefon'];
          }
          let kodInfo = '';
          if (oferta.kod) {
            kodInfo = `<p class="promo-code">${oferta.kod}</p>`;
          }
          
          offerTile.innerHTML = `
            <div class="offer-tile-icon">${iconHTML}</div>
            <div class="offer-tile-info">
              <strong>${oferta.ubezpieczyciel}</strong>
              <p>${oferta.opis}</p>
            </div>
            <div class="offer-tile-arrow">→</div>
            ${kodInfo}