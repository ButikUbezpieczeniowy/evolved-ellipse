---
// Importujemy komponent analityczny
import Analytics from '../components/Analytics.astro';

// Definiujemy, jakie parametry (props) przyjmuje nasz Layout
export interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="pl">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<title>{title}</title>
		<meta name="description" content={description} />

		<link rel="canonical" href={Astro.url.href} />

    <script is:inline src="https://www.google.com/recaptcha/api.js" async defer></script>

    <Analytics />
        
        <slot name="head" />
	
      </head>
	<body>
        <slot /> 

        <script is:inline>
          // Skrypt GTM
          (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
          new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
          j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
          'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
          })(window,document,'script','dataLayer','GTM-WP8W973');
        </script>
        <noscript>
          <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WP8W973"
                  height="0" width="0" style="display:none;visibility:hidden"></iframe>
        </noscript>
        
        </body>
 {/* Twoje istniejące tagi meta, title, etc. */}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Montserrat:wght@700&display=swap" rel="stylesheet">

    <style is:global>
      /* Definicja palety kolorów i globalnych stylów */
      :root {
        --kolor-glowny-ciemny: #0D2C4F;
        --kolor-akcentu: #FFC107;
        --kolor-tla-jasny: #F8F9FA;
        --kolor-tekstu-ciemny: #343A40;
        --kolor-bialy: #FFFFFF;
      }

      body {
        font-family: 'Lato', sans-serif;
        color: var(--kolor-tekstu-ciemny);
        margin: 0;
        padding: 0;
        background-color: var(--kolor-bialy);
      }

      h1, h2, h3 {
        font-family: 'Montserrat', sans-serif;
        color: var(--kolor-glowny-ciemny);
      }
    </style>
</head>
<body>
    <slot />
</body>
        </html>

<style is:global>
  /* Tutaj możesz dodać globalne style, np. reset CSS */
  html, body {
    margin: 0;
    padding: 0;
    font-family: sans-serif; /* Przykładowa czcionka */
  }
</style>